{%extends 'layout.njk'%}

{%block content%}
    
    <header>
        <div class="header-capa">
        <img src="/assets/logo.svg" alt="Logomarca">
        <a href="/create"><span></span>Cadastre um ponto de coleta</a>
        </div>
    </header>
    
    <div class="capa">
        <div class="capa-content">
        <h2>Seu marketplace de coleta de res√≠duos</h2>
